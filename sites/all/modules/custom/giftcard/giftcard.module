                              $res->charge,
                              $res->name,
                              $status,
                              $res->message_transaction , 
                              $res->auth_code , 
                              $res->card_type , 
                              $res->account_number , 
                              $res->created , 
                              $state , 
                              _giftcard_transaction_generate_options($res->id));

    }


$form['table'] = array(
      '#theme' => 'table',
      '#header' => $header,
      '#rows' => $rows,
      '#empty' => t('Empty Rows')
      );

$form['pager'] = array('#markup' => theme('pager'));

return $form;
}

